<%
String col = request.getParameter("col");
int col = 3;
if (col != null){
	try{
		col = Integer.parseInt(col);	
	} catch (NumberFormatException e){
		
	}
}
for (int i = 2; i <= col + 1; i++) {
    out.print("<div class=\"gugudan\">" + i + "단 ");
    for (int j = 1; j <= 9; j++) {
        out.print("<span>" + i + " × " + j + " = " + (i * j) + "</span>");
    }
    out.print("</div>");
}
%>
