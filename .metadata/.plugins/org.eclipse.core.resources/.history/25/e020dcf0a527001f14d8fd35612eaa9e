<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>구구단 출력</title>
</head>
<body>
<%
String colParam = request.getParameter("col");
int col = 3; // 기본 값
if (colParam != null) {
    try {
        col = Integer.parseInt(colParam);
    } catch (NumberFormatException e) {
        // 숫자로 변환할 수 없는 경우 기본 값 유지
    }
}

// 가로 출력
for (int i = 2; i <= col + 1; i++) {
    out.print(i + "단: ");
    for (int j = 1; j <= 9; j++) {
        out.print(i + " × " + j + " = " + (i * j));
        if (j != 9) {
            out.print(", ");
        }
    }
    out.println("<br>");
}
%>
</body>
</html>
