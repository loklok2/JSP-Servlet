<%
    String direction = request.getParameter("dir");
    if (direction != null && (direction.equals("hor") || direction.equals("ver"))) {
        if (direction.equals("hor")) {
            // 가로 출력
            for (int i = 2; i <= 9; i++) {
                for (int j = 1; j <= 9; j++) {
                    out.println(i + " × " + j + " = " + (i * j)+ "<br>");
                    out.println("\n");
                }
                out.println("<br>");
            }
        } else {
            // 세로 출력
            for (int i = 2; i <= 9; i++) {
                for (int j = 1; j <= 9; j++) {
                    out.print(i + " × " + j + " = " + (i * j)+ "<br>");
                    out.print("\n");
                }
                out.print("<br>");
            }
        }
    } else {
        out.println("올바른 방향을 입력하세요. dir=hor 또는 dir=ver 중 하나를 입력해주세요.");
    }
%>
</body>
