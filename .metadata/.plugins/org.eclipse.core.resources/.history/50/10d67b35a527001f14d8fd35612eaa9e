<%
String direction = request.getParameter("dir"); 
if (direction == null || (!direction.equals("hor") && !direction.equals("ver"))) {
    direction = "hor"; 
}

if (direction.equals("hor")) {
    // 가로 출력
    for (int i = 2; i <= 9; i++) {
        out.print("<div class=\"gugudan\">" + i + "단 ");
        for (int j = 1; j <= 9; j++) {
            out.print("<span>" + i + " × " + j + " = " + (i * j) + "</span>");
        }
        out.print("</div>");
    }
} else {
	out.print("값 입력");
}
    %>
