String direction = request.getParameter("dir");
if (direction != null && (direction.equals("hor") || direction.equals("ver"))) {
    if (direction.equals("hor")) {
        // 가로 출력
    	%><div class="gugudan"><%
                for (int i = 2; i <= 9; i++) {
                    %><div><%= i %>단<br/><%
                    for (int j = 1; j <= 9; j++) {
                        %><span><%= i %> × <%= j %> = <%= i * j %></span><br/><%
                    }
                    %></div><%
                }
                %></div><%
} else {
    // 세로 출력
    for (int i = 2; i <= 9; i++) {
        %><div class="gugudan"><%= i %>단<br/><%
        for (int j = 1; j <= 9; j++) {
            %><span><%= i %> × <%= j %> = <%= i * j %></span><br/><%
        }
        %></div><%
        }
    }
} else {
    %><p>값입력 확인</p><%
