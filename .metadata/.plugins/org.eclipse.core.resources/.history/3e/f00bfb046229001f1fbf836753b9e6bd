<%
String colParam = request.getParameter("col");
int col = 3; // 기본 값
if (colParam != null) {
    try {
        col = Integer.parseInt(colParam);
    } catch (NumberFormatException e) {
 
    }
}
for(int i = 2; i <= 9; i += col){
	for(int k =0; k <=9; k++){
		for(int j=0; j<col; j++){
			
			
			if(9 < i+ j){
				out.print("");
			}
			else{
				if(k ==0){
					out.print("<h3>" + (i+j)+"단"+ "<h3>");						
				}
				else {
					out.print(String.format("%d%d=%d", i+j, k, (i+j)*k));
				}
			}
			
		}
	}
}
%>
