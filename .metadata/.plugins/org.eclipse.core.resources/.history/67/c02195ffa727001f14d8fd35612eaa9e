<title>mission 1</title>
 <style>
        .gugudan {
            display: inline-block;
            border: 1px solid black;
            padding: 10px;
            margin: 10px;
        }
        .gugudan span {
            display: block;
        }
    </style>
</head>
<body>

<%
String direction = request.getParameter("dir"); // 방향 설정 (hor는 가로, ver는 세로)
if (direction == null || (!direction.equals("hor") && !direction.equals("ver"))) {
    direction = "hor"; // 디폴트로 가로 출력
}

if (direction.equals("hor")) {
    // 가로 출력
    for (int i = 2; i <= 9; i++) {
        out.print("<div class=\"gugudan\">" + i + "단 ");
        for (int j = 1; j <= 9; j++) {
            out.print("<span>" + i + " × " + j + " = " + (i * j) + "</span>");
        }
        out.print("</div>");
    }
} else if (direction.equals("ver")) {
    // 세로 출력
    out.print("<div class=\"gugudan\">");
    for (int i = 1; i <= 9; i++) {
        for (int j = 2; j <= 9; j++) {
            out.print("<span>" + j + " × " + i + " = " + (j * i) + "</span>");
        }
        out.print("<br>");
    }
    out.print("</div>");
}
    %>
</body>
</html> 