<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>구구단 가로와 세로 출력</title>
    <style>
        .gugudan {
            display: inline-block;
            border: 1px solid black;
            padding: 10px;
            margin: 10px;
        }
        .gugudan span {
            display: block;
        }
    </style>
</head>
<body>
<%
    String direction = "both"; // 방향 설정 (hor: 가로, ver: 세로, both: 가로와 세로 모두)
    if (direction.equals("hor") || direction.equals("both")) {
        // 가로 출력
        for (int i = 2; i <= 9; i++) {
            out.print("<div class=\"gugudan\">" + i + "단 ");
            for (int j = 1; j <= 9; j++) {
                out.print("<span>" + i + " × " + j + " = " + (i * j) + "</span>");
            }
            out.print("</div>");
        }
    }
    if (direction.equals("ver") || direction.equals("both")) {
        // 세로 출력
        out.print("<div class=\"gugudan\">");
        for (int i = 1; i <= 9; i++) {
            for (int j = 2; j <= 9; j++) {
                out.print("<span>" + j + " × " + i + " = " + (j * i) + "</span>");
            }
            out.print("<br>");
        }
        out.print("</div>");
    }
%>
</body>
</html>
